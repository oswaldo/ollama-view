{
  "name": "ollama-view",
  "displayName": "ollama-view",
  "description": "Manage local Ollama models",
  "version": "0.0.1",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/oswaldo/ollama-view.git"
  },
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "ollama-view-container",
          "title": "ollama-view",
          "icon": "media/sidebar-icon.svg"
        }
      ]
    },
    "views": {
      "ollama-view-container": [
        {
          "id": "ollama-models-view",
          "name": "Models",
          "icon": "media/sidebar-icon.svg"
        }
      ]
    },
    "commands": [
      {
        "command": "ollamaView.refresh",
        "title": "Refresh",
        "category": "ollama-view",
        "icon": "$(refresh)"
      },
      {
        "command": "ollamaView.pull",
        "title": "Pull Model",
        "category": "ollama-view",
        "icon": "$(cloud-download)"
      },
      {
        "command": "ollamaView.start",
        "title": "Start",
        "category": "ollama-view",
        "icon": "$(play)"
      },
      {
        "command": "ollamaView.stop",
        "title": "Stop",
        "category": "ollama-view",
        "icon": "$(stop)"
      },
      {
        "command": "ollamaView.delete",
        "title": "Delete",
        "category": "ollama-view",
        "icon": "$(trash)"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "ollamaView.refresh",
          "group": "navigation"
        },
        {
          "command": "ollamaView.pull",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "ollamaView.start",
          "when": "viewItem == variable-stopped",
          "group": "inline"
        },
        {
          "command": "ollamaView.stop",
          "when": "viewItem == variable-running",
          "group": "inline"
        },
        {
          "command": "ollamaView.delete",
          "group": "inline"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "package": "tsc -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./dist/test/runTest.js"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "18.x",
    "@types/sinon": "^21.0.0",
    "@types/vscode": "^1.85.0",
    "@typescript-eslint/eslint-plugin": "^8.54.0",
    "@typescript-eslint/parser": "^8.54.0",
    "eslint": "^8.56.0",
    "fast-glob": "^3.3.3",
    "mocha": "^11.7.5",
    "prettier": "^3.8.1",
    "sinon": "^21.0.1",
    "ts-loader": "^9.5.1",
    "typescript": "^5.3.3",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4"
  }
}